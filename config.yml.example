# Конфигурация для источника Habr
habr:
  # Список интересующих хабов (используется "слаг" из URL)
  hubs:
    - python
    - artificial_intelligence
    - go
    - linux_admin
    - rust_lang

  # Правила для автоматического отсева "мусора"
  filters:
    # Статьи с рейтингом строго меньше этого значения будут отброшены
    min_rating: 5
    # Статьи, содержащие эти слова в заголовке (без учета регистра), будут отброшены
    exclude_keywords:
      - "дайджест"
      - "карьера"
      - "собеседование"
      - "вакансии"
